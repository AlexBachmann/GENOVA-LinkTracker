<?xml version="1.0" encoding="utf-8"?>
	<config>
		<fieldset
			name="redirect"
			label="COM_LINKTRACKER_CONFIG_REDIRECT_SETTINGS_LABEL"
			description="COM_LINKTRACKER_CONFIG_REDIRECT_SETTINGS_DESC">
			<field
				name="use_amazon"
				type="radio"
				default="0"
				label="COM_LINKTRACKER_CONFIG_USE_AMAZON_LABEL"
				description="COM_LINKTRACKER_CONFIG_USE_AMAZON_DESC">
				<option
					value="0">JNO</option>
				<option
					value="1">JYES</option>
			</field>
			<field
				name="amazon_tracking_id"
				type="text"
				default=""
				label="COM_LINKTRACKER_CONFIG_AMAZON_TRACKING_ID_LABEL"
				description="COM_LINKTRACKER_CONFIG_AMAZON_TRACKING_ID_DESC"
				size="10" />
		</fieldset>
		<fieldset
		name="permissions"
		label="JCONFIG_PERMISSIONS_LABEL"
		description="JCONFIG_PERMISSIONS_DESC"
		>
		<field
			name="rules"
			type="rules"
			label="JCONFIG_PERMISSIONS_LABEL"
			class="inputbox"
			validate="rules"
			filter="rules"
			component="com_linktracker"
			section="component" />
	</fieldset>
	</config>
